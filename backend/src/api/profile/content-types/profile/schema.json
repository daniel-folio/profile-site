{
  "kind": "singleType",
  "collectionName": "profiles",
  "info": {
    "singularName": "profile",
    "pluralName": "profiles",
    "displayName": "Profile",
    "description": "프로필 정보"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "mainBio": {
      "type": "richtext"
    },
    "resumeBio": {
      "type": "richtext"
    },
    "location": {
      "type": "string"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "socialLinks": {
      "type": "json"
    },
    "headline": {
      "type": "string",
      "required": false
    },
    "showProfileImage": {
      "type": "boolean",
      "default": true
    },
    "showPhone": {
      "type": "boolean",
      "default": true
    },
    "resumeDownloadEnabled": {
      "type": "boolean",
      "default": false
    },
    "careerDetailDownloadEnabled": {
      "type": "boolean",
      "default": false
    }
  }
}
